@model IEnumerable<VideoBlogApplication.Models.Comment>

@{
    ViewBag.Title = "Index";
}

<h2>Video blog application</h2>

<iframe width="560" height="315" src="//www.youtube.com/embed/OgGbNJdMaTY" frameborder="0" allowfullscreen></iframe>


<ul id="commentList"></ul>

<script type="text/html" id="commentTemplate">

    <li class="list-group-item">
        <p>
            <span class="glyphicon glyphicon-user"></span>
            <span class="text-primary" data-content="Username"></span>
            <span data-content="CommentText"></span>
        </p>
        <p>
            <span class="text-muted" data-content="CommentDate"></span>
            <a class="like-comment" href="#">Like <span class="glyphicon glyphicon-thumbs-up"></span></a>
        </p>
        <!--<ul class="list-unstyled">
            <li>Patrekur liked this</li>
            <li>Siggi liked this</li>
        </ul>-->
    </li>
</script>

<ul class="list-group" style="max-width: 560px;">
    <li class="list-group-item">
        <div class="form-horizontal">
            <label class="sr-only" for="CommentText">Comment</label>
            <textarea class="form-control" rows="3" id="CommentText" name="CommentText"></textarea>
            <button type="submit" class="btn btn-primary" id="button">Send</button>
        </div>
        @Html.ValidationSummary(false)

    </li>
</ul>